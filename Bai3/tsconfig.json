{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@types/*": [
        "./@types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}